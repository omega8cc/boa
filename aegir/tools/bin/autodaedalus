###----------------------------------------###
### HOW-TO: Launch auto-upgrade properly   ###
###----------------------------------------###
###
###  Start with manual barracuda upgrade.
###
###    $ barracuda up-lite system
###
###  !!! CREATE A FRESH VM BACKUP SNAPSHOT !!!
###  !!! TEST THE FRESHLY CREATED BACKUP.. !!!
###  !!! BY USING IT TO CREATE NEW TEST VM !!!
###  !!! DO NOT CONTINUE UNTIL IT WORKS... !!!
###
###  Reboot the server to make sure there are
###  no issues with boot process.
###
###    $ reboot
###
###  If reboot worked and there are no issues,
###  you are ready for the automated magic...
###
###    $ touch /root/.run-to-daedalus.cnf
###    $ service clean-boa-env start
###
###  Once enabled, the system will launch
###  a series of barracuda upgrades/reboots
###  until it migrates any supported Debian
###  or Devuan version to Devuan Daedalus.
###
###  !!! WARNING !!!
###
###  EXPECT IT TO CRASH COMPLETELY, SO ONLY
###  FULL RESTORE FROM LATEST BACKUP SNAPSHOT
###  OF ENTIRE VM WILL BRING IT BACK TO LIVE.
###
###  DO NOT PROCEED UNTIL YOU ARE READY FOR
###  DISASTER RECOVERY FROM TESTED BACKUP!
###
###----------------------------------------###


###----------------------------------------###
### DON'T EDIT ANYTHING BELOW THIS LINE    ###
###----------------------------------------###

HOME=/root
SHELL=/bin/bash
PATH=/usr/local/bin:/usr/local/sbin:/opt/local/bin:/usr/bin:/usr/sbin:/bin:/sbin

export PATH=${PATH}
export SHELL=${SHELL}
export HOME=${HOME}

barCnf="/root/.barracuda.cnf"
logAds="/root/.autodaedalus.log"

###
### Avoid too many questions
###
export DEBIAN_FRONTEND=noninteractive
export APT_LISTCHANGES_FRONTEND=none
if [ -z "${TERM+x}" ]; then
  export TERM=vt100
fi

tRee=dev
export tRee="${tRee}"

_TODAY=$(date +%y%m%d 2>&1)
_TODAY=${_TODAY//[^0-9]/}
_X_SE="520devT02"
_THIS_SYS=check
#

check_root() {
  if [ `whoami` = "root" ]; then
    ionice -c2 -n7 -p $$
    renice 19 -p $$
    chmod a+w /dev/null
    if [ ! -e "/dev/fd" ]; then
      if [ -e "/proc/self/fd" ]; then
        rm -rf /dev/fd
        ln -s /proc/self/fd /dev/fd
      fi
    fi
  else
    echo "ERROR: This script should be ran as a root user"
    exit 1
  fi
  _DF_TEST=$(df -kTh / -l \
    | grep '/' \
    | sed 's/\%//g' \
    | awk '{print $6}' 2> /dev/null)
  _DF_TEST=${_DF_TEST//[^0-9]/}
  if [ ! -z "${_DF_TEST}" ] && [ "${_DF_TEST}" -gt "90" ]; then
    echo "ERROR: Your disk space is almost full !!! ${_DF_TEST}/100"
    echo "ERROR: We can not proceed until it is below 90/100"
    exit 1
  fi
}
check_root
cd /root/

###
### Noticeable messages
###
msg() {
  echo "AutoDaedalus [$(date +%T 2>&1)] ==> $*"
}

###
### Faster reboot
###
faster_reboot() {
  msg "Faster reboot prepare..." >> ${logAds}
  service cron stop &> /dev/null
  killall cron &> /dev/null
  kill -9 $(ps aux | grep '[s]econd.sh' | awk '{print $2}') &> /dev/null
  kill -9 $(ps aux | grep '[m]inute.sh' | awk '{print $2}') &> /dev/null
  kill -9 $(ps aux | grep '[r]unner.sh' | awk '{print $2}') &> /dev/null
  msg "Cron has been stopped" >> ${logAds}
  msg "Now waiting 60 seconds for any running tasks to complete" >> ${logAds}
  sleep 55
  if [ -e "/etc/init.d/clamav-daemon" ]; then
    update-rc.d -f clamav-daemon remove &> /dev/null
  fi
  if [ -e "/etc/init.d/clamav-freshclam" ]; then
    update-rc.d -f clamav-freshclam remove &> /dev/null
  fi
  kill -9 $(ps aux | grep '[a]vahi-daemon' | awk '{print $2}') &> /dev/null
  kill -9 $(ps aux | grep '[c]lamd' | awk '{print $2}') &> /dev/null
  kill -9 $(ps aux | grep '[f]reshclam' | awk '{print $2}') &> /dev/null
  kill -9 $(ps aux | grep '[j]ava' | awk '{print $2}') &> /dev/null
  service nginx stop &> /dev/null
  killall nginx &> /dev/null
  killall php &> /dev/null
  kill -9 $(ps aux | grep '[p]hp-fpm' | awk '{print $2}') &> /dev/null
  msg "Nginx, PHP-CLI and PHP-FPM have been stopped" >> ${logAds}
  csf -df &> /dev/null
  csf -tf &> /dev/null
  msg "Firewall has been purged" >> ${logAds}
  if [ -e "/root/.my.pass.txt" ]; then
    _SQL_PSWD=$(cat /root/.my.pass.txt 2>&1)
    _SQL_PSWD=$(echo -n ${_SQL_PSWD} | tr -d "\n" 2>&1)
    _IS_MYSQLD_RUNNING=$(ps aux | grep '[m]ysqld' | awk '{print $2}' 2>&1)
    if [ ! -z "${_IS_MYSQLD_RUNNING}" ] && [ ! -z "${_SQL_PSWD}" ]; then
      msg "Preparing MySQLD for quick shutdown..." >> ${logAds}
      mysql -u root -e "SET GLOBAL innodb_max_dirty_pages_pct = 0;" &> /dev/null
      mysql -u root -e "SET GLOBAL innodb_change_buffering = 'none';" &> /dev/null
      mysql -u root -e "SET GLOBAL innodb_buffer_pool_dump_at_shutdown = 1;" &> /dev/null
      mysql -u root -e "SET GLOBAL innodb_io_capacity = 2000;" &> /dev/null
      mysql -u root -e "SET GLOBAL innodb_io_capacity_max = 4000;" &> /dev/null
      mysql -u root -e "SET GLOBAL innodb_buffer_pool_dump_pct = 100;" &> /dev/null
      mysql -u root -e "SET GLOBAL innodb_buffer_pool_dump_now = ON;" &> /dev/null
      msg "Stopping MySQLD now..." >> ${logAds}
      service mysql stop &> /dev/null
      wait
      msg "MySQLD stopped" >> ${logAds}
    else
      msg "MySQLD already stopped" >> ${logAds}
    fi
  fi
  msg "Faster reboot done" >> ${logAds}
}

if [ ! -e "/root/.run.devaun.os.upgrade.on.init.cnf" ]; then
  if [ ! -e "/root/.run-to-daedalus.cnf" ] \
    || [ ! -e "${barCnf}" ]; then
    exit 1
  fi
fi

_CHECK_SYS=$(lsb_release -ar 2>/dev/null | grep -i codename | cut -s -f2 2>&1)
if [ -e "/root/.auto-upgraded-to-daedalus.cnf" ] \
  && [ "${_CHECK_SYS}" = "daedalus" ]; then
  exit 1
fi

check_sql_running() {
  while [ -z "${_IS_MYSQLD_RUNNING}" ] \
    || [ ! -e "/var/run/mysqld/mysqld.sock" ]; do
    _IS_MYSQLD_RUNNING=$(ps aux | grep '[m]ysqld' | awk '{print $2}' 2>&1)
    msg "INFO: Waiting for MySQLD availability..." >> ${logAds}
    sleep 3
  done
}
###check_sql_running

if [ ! -e "/root/.run.devaun.os.upgrade.on.init.cnf" ]; then
  _DB_SERIES=5.7
  _DB_SERVER_TEST=$(mysql -V 2>&1)
  if [[ ! "${_DB_SERVER_TEST}" =~ "Distrib ${_DB_SERIES}." ]]; then
    msg "Not supported DB server detected ${_DB_SERVER_TEST}" >> ${logAds}
    exit 1
  fi
fi

if [ -e "/root/.run-to-daedalus.cnf" ]; then
  echo " " >> ${logAds}
  if [ -e "/root/.run-auto-major-os-reboot-one.cnf" ] \
    || [ -e "/root/.run-auto-major-os-reboot-two.cnf" ]; then
    msg "Waiting 99 seconds for the system start scripts to finish" >> ${logAds}
    sleep 99
  else
    msg "Automatic BOA System Major Upgrade Tool welcomes you aboard!" >> ${logAds}
    sleep 3
  fi
fi

_AUTO_DAEDALUS_TEST=$(grep _AUTO_DAEDALUS ${barCnf} 2>&1)
if [[ ! "${_AUTO_DAEDALUS_TEST}" =~ "_AUTO_DAEDALUS" ]]; then
  echo "_AUTO_DAEDALUS=YES" >> ${barCnf}
fi

if [ -e "/root/.run-to-daedalus.cnf" ] \
  && [ ! -e "/root/.run-auto-major-os-reboot-one.cnf" ] \
  && [ ! -e "/root/.run-auto-major-os-reboot-two.cnf" ]; then
  echo " " >> ${logAds}
  if [ ! -e "/root/.run.devaun.os.upgrade.on.init.cnf" ]; then
    msg "Running barracuda php-idle disable to speed up upgrades" >> ${logAds}
    barracuda php-idle disable >> ${logAds}
    wait
    msg "The barracuda php-idle disable completed" >> ${logAds}
    msg "Launching standard barracuda up-${tRee} system now" >> ${logAds}
    barracuda up-${tRee} system >> ${logAds}
    wait
    msg "The standard barracuda up-${tRee} system completed" >> ${logAds}
  else
    touch /root/.latest-barracuda-upgrade-finale.info
  fi
  if [ -e "/root/.latest-barracuda-upgrade-finale.info" ]; then
    _THIS_OS=$(lsb_release -ar 2>/dev/null | grep -i distributor | cut -s -f2 2>&1)
    _THIS_SYS=$(lsb_release -ar 2>/dev/null | grep -i codename | cut -s -f2 2>&1)
    if [ -e "/root/.chimaera_to_daedalus_major_os_upgrade.info" ] \
      || [ -e "/root/.bookworm_to_daedalus_major_os_upgrade.info" ]; then
      _REAL_OS="Devuan"
      _REAL_OSR="daedalus"
    else
      _REAL_OS="${_THIS_OS}"
      _REAL_OSR="${_THIS_SYS}"
    fi
    if [ "${_REAL_OSR}" = "jessie" ]; then
      echo "_JESSIE_TO_BEOWULF=YES" >> ${barCnf}
      msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/beowulf"  >> ${logAds}
    elif [ "${_REAL_OSR}" = "stretch" ]; then
      echo "_STRETCH_TO_BEOWULF=YES" >> ${barCnf}
      msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/beowulf"  >> ${logAds}
    elif [ "${_REAL_OSR}" = "buster" ]; then
      echo "_BUSTER_TO_BEOWULF=YES" >> ${barCnf}
      msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/beowulf"  >> ${logAds}
    elif [ "${_REAL_OSR}" = "bullseye" ]; then
      echo "_BULLSEYE_TO_CHIMAERA=YES" >> ${barCnf}
      msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/chimaera" >> ${logAds}
    elif [ "${_REAL_OSR}" = "beowulf" ]; then
      echo "_BEOWULF_TO_CHIMAERA=YES" >> ${barCnf}
      msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/chimaera" >> ${logAds}
    elif [ "${_REAL_OSR}" = "bookworm" ]; then
      echo "_BOOKWORM_TO_DAEDALUS=YES" >> ${barCnf}
      msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/daedalus" >> ${logAds}
    elif [ "${_REAL_OSR}" = "chimaera" ]; then
      echo "_CHIMAERA_TO_DAEDALUS=YES" >> ${barCnf}
      msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/daedalus" >> ${logAds}
    fi
    msg "The first stage of major OS upgrade will start now" >> ${logAds}
    barracuda up-${tRee} system >> ${logAds}
    wait
    if [ -e "/root/.run_post_major_os_upgrade.info" ]; then
      msg "The first stage of major OS upgrade completed" >> ${logAds}
      msg "The system will reboot now" >> ${logAds}
      rm -f /root/.latest-barracuda-upgrade-finale.info
      touch /root/.run-auto-major-os-reboot-one.cnf
      update-grub >> ${logAds}
      faster_reboot
      reboot
      exit 0
    fi
  fi
fi

if [ -e "/root/.run-to-daedalus.cnf" ] \
  && [ -e "/root/.run-auto-major-os-reboot-one.cnf" ] \
  && [ ! -e "/root/.run-auto-major-os-reboot-two.cnf" ]; then
  echo " " >> ${logAds}
  msg "Launching post-reboot barracuda up-${tRee} system" >> ${logAds}
  msg "to complete the first stage of major OS upgrade" >> ${logAds}
  barracuda up-${tRee} system >> ${logAds}
  wait
  msg "The post-reboot barracuda up-${tRee} system completed" >> ${logAds}
  echo " " >> ${logAds}
  _THIS_OS=$(lsb_release -ar 2>/dev/null | grep -i distributor | cut -s -f2 2>&1)
  _THIS_SYS=$(lsb_release -ar 2>/dev/null | grep -i codename | cut -s -f2 2>&1)
  if [ -e "/root/.chimaera_to_daedalus_major_os_upgrade.info" ] \
    || [ -e "/root/.bookworm_to_daedalus_major_os_upgrade.info" ]; then
    _REAL_OS="Devuan"
    _REAL_OSR="daedalus"
    _FURTHER_UPGRADE=NO
  else
    _REAL_OS="${_THIS_OS}"
    _REAL_OSR="${_THIS_SYS}"
    _FURTHER_UPGRADE=YES
  fi
  if [ "${_FURTHER_UPGRADE}" = "NO" ]; then
    if [ -e "/root/.latest-barracuda-upgrade-finale.info" ]; then
      msg "The single stage major OS upgrade completed" >> ${logAds}
      msg "The system will reboot now for a final upgrade" >> ${logAds}
      rm -f /root/.latest-barracuda-upgrade-finale.info
      touch /root/.run-auto-major-os-reboot-two.cnf
      update-grub >> ${logAds}
      faster_reboot
      reboot
      exit 0
    fi
  fi
  if [ "${_REAL_OSR}" = "bullseye" ] && [ "${_FURTHER_UPGRADE}" = "YES" ]; then
    echo "_BULLSEYE_TO_CHIMAERA=YES" >> ${barCnf}
    msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/chimaera" >> ${logAds}
  elif [ "${_REAL_OSR}" = "beowulf" ] && [ "${_FURTHER_UPGRADE}" = "YES" ]; then
    echo "_BEOWULF_TO_CHIMAERA=YES" >> ${barCnf}
    msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/chimaera" >> ${logAds}
  elif [ "${_REAL_OSR}" = "bookworm" ] && [ "${_FURTHER_UPGRADE}" = "YES" ]; then
    echo "_BOOKWORM_TO_DAEDALUS=YES" >> ${barCnf}
    msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/daedalus" >> ${logAds}
  elif [ "${_REAL_OSR}" = "chimaera" ] && [ "${_FURTHER_UPGRADE}" = "YES" ]; then
    echo "_CHIMAERA_TO_DAEDALUS=YES" >> ${barCnf}
    msg "Launching major upgrade from ${_REAL_OS}/${_REAL_OSR} to Devuan/daedalus" >> ${logAds}
  fi
  if [ "${_FURTHER_UPGRADE}" = "YES" ]; then
    msg "The second stage of major OS upgrade will start now" >> ${logAds}
    barracuda up-${tRee} system >> ${logAds}
    wait
    if [ -e "/root/.run_post_major_os_upgrade.info" ]; then
      msg "The second stage of major OS upgrade completed" >> ${logAds}
      msg "The system will reboot now" >> ${logAds}
      rm -f /root/.latest-barracuda-upgrade-finale.info
      touch /root/.run-auto-major-os-reboot-two.cnf
      update-grub >> ${logAds}
      faster_reboot
      reboot
      exit 0
    fi
  fi
fi

if [ -e "/root/.run-to-daedalus.cnf" ] \
  && [ -e "/root/.run-auto-major-os-reboot-one.cnf" ] \
  && [ -e "/root/.run-auto-major-os-reboot-two.cnf" ]; then
  echo " " >> ${logAds}
  msg "Launching the final post-second-reboot barracuda up-${tRee} system" >> ${logAds}
  barracuda up-${tRee} system >> ${logAds}
  wait
  [ -e "/root/.run-to-daedalus.cnf" ] && rm -f /root/.run-to-daedalus.cnf
  [ -e "/root/.run-auto-major-os-reboot-one.cnf" ] && rm -f /root/.run-auto-major-os-reboot-one.cnf
  [ -e "/root/.run-auto-major-os-reboot-two.cnf" ] && rm -f /root/.run-auto-major-os-reboot-two.cnf
  touch /root/.auto-upgraded-to-daedalus.cnf
  sed -i "s/^_AUTO_DAEDALUS.*//g" /root/.barracuda.cnf
  msg "The final post-reboot barracuda up-${tRee} system completed" >> ${logAds}
  msg "That's all folks!" >> ${logAds}
  msg "Bye!" >> ${logAds}
  echo " " >> ${logAds}
  if [ -e "/root/.run.devaun.os.upgrade.on.init.cnf" ]; then
    mv -f /root/.run.devaun.os.upgrade.on.init.cnf /root/.done.devaun.os.upgrade.on.init.cnf
    if [ -e "/root/.barracuda.cnf" ]; then
      mv -f /root/.barracuda.cnf /root/.init.barracuda.cnf
    fi
  fi
fi

exit 0
